# ==================== CONFIGURAÇÕES DO PROJETO ====================

# Diretórios
DATA_DIR=01_data/processed
MODELS_DIR=03_ml/models
OUTPUT_DIR=01_data/processed

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Database (Opcional - para integração futura)
DATABASE_URL=postgresql://user:password@localhost:5432/retail_bi
DB_ECHO=false

# Machine Learning
ML_RANDOM_STATE=42
FORECAST_PERIODS=90
KMEANS_CLUSTERS=5
ANOMALY_CONTAMINATION=0.05

# Geração de Dados
START_DATE=2022-01-01
END_DATE=2024-12-31
NUM_VENDAS=100000
NUM_CLIENTES=10000
NUM_VENDEDORES=200

# Power BI (para integração via API)
POWERBI_REFRESH_ENABLED=false
POWERBI_WORKSPACE_ID=your-workspace-id
POWERBI_DATASET_ID=your-dataset-id

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Notificações (Opcional)
ENABLE_EMAIL_ALERTS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
ALERT_RECIPIENTS=recipient@example.com

# Slack (Opcional)
ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Azure/AWS (para deploy futuro)
AZURE_STORAGE_CONNECTION=your-connection-string
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# Segurança
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== NOTAS ====================
# 1. Copie este arquivo para .env
# 2. Substitua os valores pelos seus reais
# 3. Nunca commite o arquivo .env no Git
# 4. Use python-dotenv para carregar as variáveis
